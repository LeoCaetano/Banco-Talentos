  
@model IEnumerable<BancoTalentos.Modelos.Models.Profissao>

<h2>Todas Profiss√µes</h2>

<a href="/Profissao/Cadastro" class="btn-success">Nova Profissao</a>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th colspan="2">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Nome 
                            </td>
                        <td>
                            <input type="checkbox" @(item.Ativo == true ? "checked" : "" ) disabled/>
                        </td>
                        <td>
                            <a href="/Profissao/Editar/@item.IdProfissao" class="btn">Editar</a>
                        </td>
                        <td>
                            <a href="/Profissao/Deletar/@item.IdProfissao" class="btn">Deletar</a>
                        </td>
                    </tr> 
                }
            </tbody>
        </table>
    </div>
</div>